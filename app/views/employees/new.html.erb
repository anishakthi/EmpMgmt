
<h1>Add Employee</h1>


<%= form_for :employee, url: employees_path do |f| %>
<% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@employee.errors.count, "error") %> prohibited
        this Employee from being saved:
      </h2>
      <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :Employee_Name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :Date_Of_Joining %><br>
    <%= f.date_select :doj, :start_year => 1900%>
  </p>
 
  <p>
    <%= f.label :Status %><br>
    <%= f.select :status, ['Probation', 'Confirmed'] %>
  </p>

  <p>
    <%= f.label :Date_Of_Birth %><br>
    <%= f.date_select :dob,  :start_year => 1900%>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Cancel', employees_path %> 
